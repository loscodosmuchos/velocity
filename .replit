modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["github:1.0.0", "javascript_anthropic_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["chromium", "playwright-driver"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "api-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "api-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index.cjs"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3003

[[ports]]
localPort = 34589
externalPort = 4200

[[ports]]
localPort = 39401
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "NODE_ENV=production node server/index.cjs"]
build = ["pnpm", "build"]

[userenv]

[userenv.shared]
VITE_DEMO_MODE = "false"
VITE_API_URL = "/api"
DEMO_MODE = "true"
